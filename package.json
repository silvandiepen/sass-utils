{
  "name": "@sil/sass-utils",
  "version": "0.0.7",
  "description": "Sass Utilities",
  "main": "index.scss",
  "exports": {
    "./build": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build && npm run test:js && npm run test",
    "test:js": "jest",
    "test": "npm run test:colors && npm run test:variables",
    "test:colors": "npm run test:colors:rgb && npm run test:colors:hsl && npm run test:colors:prefix",
    "test:colors:rgb": "sass test/colors.rgb.scss output/colors.rgb.css --no-source-map",
    "test:colors:hsl": "sass test/colors.hsl.scss output/colors.hsl.css --no-source-map",
    "test:colors:prefix": "sass test/colors.prefix.scss output/colors.prefix.css --no-source-map",
    "test:variables": "sass test/variables.scss output/variables.css --no-source-map",
    "test:colors:modes": "sass test/colors.modes.scss output/colors.modes.css --no-source-map"
  },
  "keywords": [
    "Sass",
    "Utilities"
  ],
  "author": "Sil van Diepen",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "jest": "^29.4.3",
    "sass": "^1.57.1",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@sil/color": "^0.4.6",
    "jsonto": "^1.0.15"
  }
}
